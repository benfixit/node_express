extends layout

block content
    h1 Edit #{article.title}
    form(action="/article/edit/" + article._id, method="POST")
        div.form-group
            label(for="title") Title:
            input.form-control(type="text", name="title", id="title", value=article.title)
        div.form-group
            label(for="author") Author:
            input.form-control(type="text", name="author", id="author", value=article.author)
        div.form-group
            label(for="body") Body:
            textarea.form-control(name="body", cols="30", rows="10") #{article.body}
        input.btn.btn-primary(type="submit", value="Submit")